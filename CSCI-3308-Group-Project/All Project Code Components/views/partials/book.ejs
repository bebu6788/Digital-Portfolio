<% if (items) { %>
    <div class="container-lg">
        <% items.forEach( book => { %>
            <div class="card" style="padding: .1rem; margin-bottom: 5px;"> 
                <div class="card-body">
                    <div class=" row">
                        <div class="col-3">
                            <img src= <%= book.imageLinks.smallThumbnail %> style="height: auto; width:auto%;" >
                        </div>
                        <div class="col-8 align-self-center">
                            <h1 class="card-title text-center" >  <%= book.title %> -- <%= book.authors[0] %> </h1>
                            <h3 class="card-subtitile text-center">  </h1>
                            <h4 class="card-subtitle text-center"> <%= book.publisher %> (<%= book.publishedDate %>)</h4> 
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
  </div>
<% } %>